<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <RootNamespace>SV_TestTask.Tests</RootNamespace>

    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.7.1" />
    <PackageReference Include="Moq" Version="4.16.0" />
    <PackageReference Include="xunit" Version="2.4.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.3">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="coverlet.collector" Version="1.3.0">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SV-TestTask.ApplicationServices\SV-TestTask.ApplicationServices.csproj" />
    <ProjectReference Include="..\SV-TestTask.Common\SV-TestTask.Common.csproj" />
    <ProjectReference Include="..\SV-TestTask.DataAccess\SV-TestTask.DataAccess.csproj" />
    <ProjectReference Include="..\SV_TestTask\SV_TestTask.csproj" />
  </ItemGroup>
  <Target Name="AfterBuild">
    <Copy SourceFiles="sv_lsm_data.json" DestinationFolder="$(OutputPath)\SV-TestTask.DataAccess\sv_lsm_data.json" ContinueOnError="true" />
  </Target>
</Project>
